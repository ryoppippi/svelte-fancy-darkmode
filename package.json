{
	"name": "svelte-fancy-darkmode",
	"type": "module",
	"version": "1.1.1",
	"packageManager": "pnpm@10.6.0",
	"description": "A fancy dark mode toggle for Svelte",
	"author": "ryoppippi",
	"license": "MIT",
	"repository": "ryoppippi/svelte-fancy-darkmode",
	"keywords": [
		"svelte",
		"dark mode",
		"toggle",
		"theme",
		"fancy"
	],
	"sideEffects": [
		"**/*.css"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"svelte": "./dist/index.js",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"!dist/**/*.spec.*",
		"!dist/**/*.test.*",
		"dist"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint --cache .",
		"format": "nr lint --fix",
		"release": "nlx bumpp"
	},
	"peerDependencies": {
		"svelte": "^5.22.5"
	},
	"dependencies": {
		"esm-env": "^1.2.2"
	},
	"devDependencies": {
		"@antfu/ni": "^23.3.1",
		"@iconify-json/line-md": "^1.2.5",
		"@ryoppippi/eslint-config": "npm:@jsr/ryoppippi__eslint-config@^0.0.25",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.18.0",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"eslint": "^9.21.0",
		"eslint-plugin-format": "^1.0.1",
		"eslint-plugin-svelte": "^3.0.3",
		"publint": "^0.3.8",
		"svelte": "^5.22.5",
		"svelte-check": "^4.1.5",
		"typescript": "^5.8.2",
		"unplugin-icons": "^22.1.0",
		"vite": "^6.2.0"
	}
}
