{
	"name": "svelte-fancy-darkmode",
	"type": "module",
	"version": "1.1.4",
	"packageManager": "pnpm@10.12.3",
	"description": "A fancy dark mode toggle for Svelte",
	"author": "ryoppippi",
	"license": "MIT",
	"repository": "ryoppippi/svelte-fancy-darkmode",
	"keywords": [
		"svelte",
		"dark mode",
		"toggle",
		"theme",
		"fancy"
	],
	"sideEffects": [
		"**/*.css"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"svelte": "./dist/index.js",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"!dist/**/*.spec.*",
		"!dist/**/*.test.*",
		"dist"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "pnpm run --stream /^build:/",
		"build:vite": "vite build",
		"build:package": "svelte-kit sync && svelte-package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "nr build && clean-pkg-json -r scripts.preinstall",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint --cache .",
		"format": "nr lint --fix",
		"release": "nr lint && nr build && publint && nlx bumpp",
		"preinstall": "nlx only-allow pnpm"
	},
	"peerDependencies": {
		"svelte": "^5.34.7"
	},
	"dependencies": {
		"esm-env": "^1.2.2"
	},
	"devDependencies": {
		"@antfu/ni": "^25.0.0",
		"@iconify-json/line-md": "^1.2.8",
		"@ryoppippi/eslint-config": "^0.3.7",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"clean-pkg-json": "^1.3.0",
		"eslint": "^9.29.0",
		"eslint-plugin-format": "^1.0.1",
		"eslint-plugin-svelte": "^3.9.3",
		"publint": "^0.3.12",
		"svelte": "^5.34.7",
		"svelte-check": "^4.2.2",
		"typescript": "^5.8.3",
		"unplugin-icons": "^22.1.0",
		"vite": "npm:rolldown-vite@latest"
	}
}
